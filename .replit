modules = ["csharp", "dotnet-7.0", "dotnet-8.0"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "C# Document Processor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "C# Document Processor Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Document Processing Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create and Process Test Document"

[[workflows.workflow]]
name = "C# Document Processor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet restore && dotnet build && dotnet run -- --create-test"

[[workflows.workflow]]
name = "C# Document Processor Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run -- test_document.docx processed_document.docx"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet restore && dotnet test"

[[workflows.workflow]]
name = "Document Processing Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run -- test_document.docx processed_document.docx"

[[workflows.workflow]]
name = "Build and Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet restore && dotnet build && dotnet test"

[[workflows.workflow]]
name = "Create and Process Test Document"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet build && dotnet run -- --create-test && dotnet run -- test_document.docx processed_document.docx"

[deployment]
run = ["sh", "-c", "dotnet restore && dotnet build && dotnet run -- --create-test"]
